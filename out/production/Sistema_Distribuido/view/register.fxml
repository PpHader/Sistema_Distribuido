<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="controller.RegisterController"
          xmlns:fx="http://javafx.com/fxml"
          hgap="10" vgap="10" padding="20">
    <Label text="Nombre completo:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="txtName"       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Email:"             GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="txtEmail"      GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Contraseña:"        GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <PasswordField fx:id="txtPassword"    GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Confirmar contraseña:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <PasswordField fx:id="txtConfirm"     GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Button text="Registrar"         onAction="#onRegisterClicked"
            GridPane.rowIndex="4" GridPane.columnIndex="1"/>
</GridPane>
